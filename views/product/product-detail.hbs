{{> header shopActive=" active"}}

{{#with product}}
    {{> breadcrum activeItem=name}}

    <!-- Product Detail Start -->
    <div class="product-detail">
    <div class="container-fluid">
    <div class="row">
    <div class="col-lg-8">
        <div class="product-detail-top">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <div class="product-slider-single normal-slider">
                        <img src="{{images.[0].url}}" alt="Product Image">
                    </div>
                    <div class="product-slider-single-nav normal-slider">
                        {{#each images}}
                            <div class="slider-nav-img">
                                <img src="{{url}}" alt="Product Image">
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="product-content">
                        <div class="title"><h2>{{name}}</h2><span>Lượt xem: {{amountView}}
                            | Đã bán: {{amountSold}}</span>
                        </div>
                        <div class="price">
                            <h4>Price:</h4>
                            <p>
                                ${{price}} {{#if oldPrice}}
                                <span>${{oldPrice}}</span>{{/if}}
                            </p>
                        </div>
                        <div class="quantity product-{{id}}">
                            <h4>Quantity:</h4>
                            <div class="qty">
                                <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                <input type="text" value="1">
                                <button class="btn-plus"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                        <div class="action">
                            <input type="hidden" value="{{id}}">
                            <a class="btn add-this-to-cart" href="#"><i class="fa fa-shopping-cart"></i>Add to Cart</a>
                            <a class="btn buy-this-now" href="#"><i class="fa fa-shopping-bag"></i>Buy Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <div class="row product-detail-bottom">
    <div class="col-lg-12">
        <ul class="nav nav-pills nav-justified">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="pill" href="#description">Description</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="pill" href="#reviews">Reviews</a>
            </li>
        </ul>

    <div class="tab-content">
        <div id="description" class="container tab-pane active">
            <h4>Product description</h4>
            <p>{{description}}</p>
        </div>
{{/with}}
    <div id="reviews" class="container tab-pane fade">
        <div class="reviews-submit">
            <h4>Give your Review:</h4>
            <div class="row form">
                <div class="col-sm-6">
                    <label>Name</label>
                    <input type="text" placeholder="Name" value="{{user.firstName}}" name="name">

                </div>
                <div class="col-sm-6">
                    <label>E-mail</label>
                    <input type="email" placeholder="Email" value="{{user.email}}" name="email">
                </div>
                <div class="col-sm-12">
                    <label>Review</label>
                    <textarea placeholder="Review" name="review"></textarea>
                </div>
                <div class="col-sm-12">
                    <input type="hidden" value="{{product.id}}"/>
                    <button>Review</button>
                </div>
            </div>
        </div>

        <div class="reviews-list">
            {{#each feedback}}
                <div class="reviews-submitted">
                    <div class="reviewer">{{fullName}} - <span>{{createdAt}}</span></div>
                    <p>
                        {{content}}
                    </p>
                </div>
            {{/each}}
        </div>

        <!-- Pagination Start -->
        <div class="col-md-12">
            <nav class="review-{{product.id}}">
                <ul class="pagination justify-content-center">
                    <!-- Previous Button -->
                    {{#if previous}}
                        <li class="page-item">
                            <a class="page-link" href={{previous.url}}>Previous</a>
                        </li>
                    {{/if}}

                    <!-- Pages -->
                    {{#each pages}}
                        {{#if active}}
                            <li class="page-item active"><a class="page-link" href={{url}}>{{page}}</a></li>
                        {{else}}
                            <li class="page-item"><a class="page-link" href={{url}}>{{page}}</a></li>
                        {{/if}}
                    {{/each}}

                    <!-- Next Button -->
                    {{#if next}}
                        <li class="page-item">
                            <a class="page-link" href={{next.url}}>Next</a>
                        </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
        <!-- Pagination End -->
    </div>
</div>
</div>
</div>

    <div class="product">
        <div class="section-header">
            <h1>Related Products</h1>
        </div>

        <div class="row align-items-center product-slider product-slider-3">
            {{#each products}}
                {{> product product=this}}
            {{/each}}
        </div>
    </div>
</div>

    <!-- Side Bar Start -->
    <div class="col-lg-4 sidebar">
        {{> category_sidebar category=category}}

        <div class="sidebar-widget widget-slider">
            <div class="sidebar-slider normal-slider">
                {{#each products}}
                    {{> product product=this}}
                {{/each}}
            </div>
        </div>
    </div>
    <!-- Side Bar End -->
</div>
</div>
</div>
<!-- Product Detail End -->

<!-- Brand Start -->
<!--{{> brand_slide brand=brand}}-->
<!-- Brand End -->

{{> footer}}


<script id="review-template" type="text/x-handlebars">
        <div class="reviews-submitted">
            <div class="reviewer">\{{feedback.fullName}} - <span>\{{feedback.createdAt}}</span></div>
            <p>
                \{{feedback.content}}
            </p>
        </div>





</script>