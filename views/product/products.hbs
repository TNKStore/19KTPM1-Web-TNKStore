{{> header shopActive=" active"}}

{{> breadcrum activeItem=categoryName}}

<!-- Product List Start -->
<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-view-top">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="product-search">
                                        <input value="Search">
                                        <button><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="product-short">
                                        <div class="dropdown">
                                            <div class="dropdown-toggle" data-toggle="dropdown">Product short by</div>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="#" class="dropdown-item">Newest</a>
                                                <a href="#" class="dropdown-item">Popular</a>
                                                <a href="#" class="dropdown-item">Most sale</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="product-price-range">
                                        <div class="dropdown">
                                            <div class="dropdown-toggle" data-toggle="dropdown">Product price range
                                            </div>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="#" class="dropdown-item">$0 to $50</a>
                                                <a href="#" class="dropdown-item">$51 to $100</a>
                                                <a href="#" class="dropdown-item">$101 to $150</a>
                                                <a href="#" class="dropdown-item">$151 to $200</a>
                                                <a href="#" class="dropdown-item">$201 to $250</a>
                                                <a href="#" class="dropdown-item">$251 to $300</a>
                                                <a href="#" class="dropdown-item">$301 to $350</a>
                                                <a href="#" class="dropdown-item">$351 to $400</a>
                                                <a href="#" class="dropdown-item">$401 to $450</a>
                                                <a href="#" class="dropdown-item">$451 to $500</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{#each product}}
                        <div class="col-md-4">
                            {{> product product=this}}
                        </div>
                    {{/each}}
                </div>

                <!-- Pagination Start -->
                <div class="col-md-12">
                    <nav>
                        <ul class="pagination justify-content-center">
                            <!-- Previous Button -->
                            {{#if previous}}
                                <li class="page-item">
                                    <a class="page-link" href={{previous.url}}>Previous</a>
                                </li>
                            {{else}}
                                <li class="page-item disabled">
                                    <a class="page-link">Previous</a>
                                </li>
                            {{/if}}

                            <!-- Pages -->
                            {{#each pages}}
                                {{#if active}}
                                    <li class="page-item active"><a class="page-link" href={{url}}>{{page}}</a></li>
                                {{else}}
                                    <li class="page-item"><a class="page-link" href={{url}}>{{page}}</a></li>
                                {{/if}}
                            {{/each}}

                            <!-- Next Button -->
                            {{#if next}}
                                <li class="page-item">
                                    <a class="page-link" href={{next.url}}>Next</a>
                                </li>
                            {{else}}
                                <li class="page-item disabled">
                                    <a class="page-link">Next</a>
                                </li>
                            {{/if}}
                        </ul>
                    </nav>
                </div>
                <!-- Pagination End -->
            </div>

            <!-- Side Bar Start -->
            <div class="col-lg-4 sidebar">
                {{> category_sidebar category=category}}

                <div class="sidebar-widget widget-slider">
                    <div class="sidebar-slider normal-slider">
                        {{#each products}}
                            {{> product product=this}}
                        {{/each}}
                    </div>
                </div>
            </div>
            <!-- Side Bar End -->
        </div>
    </div>
</div>
<!-- Product List End -->

<!-- Brand Start -->
<!--{{> brand_slide brand=brand}}-->
<!-- Brand End -->

{{> footer}}
